# Copy this file to .env and fill in your actual values
# .env is in .gitignore and will NOT be committed

# VPS Configuration
VPS_HOST=your-vps-ip-here
VPS_USER=takadmin
DOMAIN_NAME=tak.yourdomain.com

# Google Drive File IDs (from shareable links)
# Example: https://drive.google.com/file/d/ABC123xyz/view?usp=sharing
# The ID is: ABC123xyz
GDRIVE_TAKSERVER_ID=your-file-id-here
GDRIVE_GPG_KEY_ID=your-gpg-key-id-here

# NextCloud (if using instead of Google Drive)
NC_URL=https://files.yourdomain.com
NC_USER=your-nextcloud-user
NC_PASSWORD=your-app-password-here

# Certificate Information
CERT_COUNTRY=US
CERT_STATE=Idaho
CERT_CITY=Idaho City
CERT_ORG=Clear Creek VFD
CERT_OU=VDC-BIM

